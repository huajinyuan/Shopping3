<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="cn.zy.base.shopping.mian.center.MyPaymentActivity">

    <include layout="@layout/layout_com_topbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_20"
        android:text="ACCOUNT BALANCE"
        android:textColor="@color/color_black_0D"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$199.99"
        android:textColor="#FF6666"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/edt_input"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_radius_grey"
        android:gravity="center"
        android:text="$199.99"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_action_pay_1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_radius_blue"
        android:gravity="center"
        android:text="Top Up $1000"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_action_pay_2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_radius_blue"
        android:gravity="center"
        android:text="Paypal"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_radius_edt_bg"
        android:gravity="center"
        android:text="Bank Transfer"
        android:textColor="@color/colorTextGrey"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
